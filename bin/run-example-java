export BASE_DIR="$(cd "`dirname "$0"`"/..; pwd)"
EXAMPLES_DIR="${BASE_DIR}"/examples

if [ -n "$1" ]; then
  EXAMPLE_CLASS="$1"
  shift
else
  echo "Usage: ./bin/run-example-java <example-class> [example-args]" 1>&2
  echo "  - set MASTER=XX to use a specific master" 1>&2
  echo "  - can use abbreviated example class name relative to com.apache.spark.examples" 1>&2
  echo "     (e.g. SparkPi, mllib.LinearRegression, streaming.KinesisWordCountASL)" 1>&2
  exit 1
fi

EXAMPLE_MASTER=${MASTER:-"local[*]"}

if [[ ! $EXAMPLE_CLASS == com.ibm.gpuenabler* ]]; then
  EXAMPLE_CLASS="com.ibm.gpuenabler.$EXAMPLE_CLASS"
fi

echo "Executing : mvn exec:java -Dexec.mainClass=$EXAMPLE_CLASS -Dexec.args=\"$EXAMPLE_MASTER\" -Dexec.cleanupDaemonThreads=\"false\" -Ddetail=true -Dgoal=java"

cd $EXAMPLES_DIR

mvn exec:java -Dexec.mainClass=$EXAMPLE_CLASS -Dexec.args="$EXAMPLE_MASTER" -Dexec.cleanupDaemonThreads="false" -Ddetail=true -Dgoal=java
